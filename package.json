{
  "name": "koa-graphql-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "npm run lint && npm run lint:watch & npm run build:watch",
    "test": "jest",
    "lint": "tslint -t stylish 'src/**/*.ts'",
    "build:watch": "tsc-watch --onSuccess \"node build/server.js\"",
    "lint:watch": "chokidar \"src/**/*.ts\" -c \"tslint -t stylish --force '{path}'\""
  },
  "engines": {
    "node": ">= 7.6.0"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "envalid": "3.0.0",
    "graphql": "0.9.6",
    "koa": "2.2.0",
    "koa-convert": "1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "0.7.0",
    "koa-router": "7.1.1",
    "moment": "2.18.1",
    "request-promise": "4.2.1",
    "source-map-support": "0.4.15",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/chalk": "0.4.31",
    "@types/graphql": "0.9.1",
    "@types/jest": "19.2.3",
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.22",
    "@types/request-promise": "4.1.33",
    "chokidar-cli": "1.2.0",
    "jest": "20.0.0",
    "ts-jest": "20.0.1",
    "tsc-watch": "^1.0.5",
    "tslint": "5.2.0",
    "typescript": "2.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts)$"
  }
}
